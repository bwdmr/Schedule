{
  "compileOnSave": false,
  "compilerOptions": {
    "target": "es2022",
    "lib": ["dom", "dom.iterable", "es2022"],
    "module": "es2022",
    "jsx": "react-jsx",
    "declaration": false,
    "importHelpers": true,
    "sourceMap": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": "./src",
  },
  "include": [
    "./src/**/*",
    "**/*.d.ts"
  ],
  "exclude": ["node_modules"]
}

